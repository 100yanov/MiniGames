@page "/MemoryMatrix"

<h3>Memory Matrix</h3>

<button class="btn btn-primary mt-3" @onclick="StartGame">Restart Game</button>

<div class="game-grid" style="--grid-size:@(gridSize)">
    @for (int i = 0; i < gridSize * gridSize; i++)
    {
        int index = i;
        <CellComponent Color="@cells[i].Color" OnClick="()=>CellClicked(index)"></CellComponent>
    }
</div>

